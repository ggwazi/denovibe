{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ggwazi/denovibe/schemas/agent.schema.json",
  "title": "Denovibe Agent Manifest",
  "type": "object",
  "required": ["name", "version", "description", "runtime", "entrypoint"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "description": { "type": "string" },
    "runtime": { "type": "string", "enum": ["deno", "node", "bun"] },
    "entrypoint": { "type": "string" },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["code_analysis", "test_execution", "workflow_dispatch", "mcp_tools"]
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" }
        }
      }
    },
    "mcp_servers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "config"],
        "properties": {
          "name": { "type": "string" },
          "config": { "type": "string" }
        }
      }
    },
    "permissions": {
      "type": "array",
      "items": { "type": "object" }
    }
  }
}
