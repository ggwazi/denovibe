root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
